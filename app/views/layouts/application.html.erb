<!DOCTYPE html>
<html>
  <head>
    <title>Eventor</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
  </head>

  <body>
    <%= yield %>
    <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-info ">
        <% if session[:user_id] %>
          <%= link_to "Eventor", root_path, class: "navbar-brand" %>
        <% else %>
          <%= link_to "Eventor", root_path, class: "navbar-brand" %>
        <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
          <%= link_to "Ajouter un événement", new_event_path, :class => "btn btn-warning" %>
          </li>
          <li class="nav-item">
          <%= link_to "", root_path, class: "nav-item nav-link" %>
          </li>
          <li class="nav-item">
          <%= link_to "", root_path, class: "nav-item nav-link" %>
          </li>
        </ul>
        <ul class="navbar-nav ml-auto dropleft">
          <% if user_signed_in? == true %>
          <div class="btn-group">
              <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Mon profil
              </button>
              <div class="dropdown-menu">
                <%= link_to "Mon profil", user_path(current_user.id), :class => "dropdown-item"%>
                <%= link_to "Se déconnecter", destroy_user_session_path, class: "dropdown-item", method:"delete", :data => {:confirm => "Êtes-vous sûrs de vouloir vous déconnecter ?"}%>
              </div>
            </div>
          <% else %>
            <div class="btn-group">
              <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Connexion / S'inscrire
              </button>

              <div class="dropdown-menu">
                <%= link_to "Se connecter", new_user_session_path, :class => "dropdown-item"%>
                <%= link_to "S'inscrire", new_user_registration_path, :class => "dropdown-item"%>
              </div>
            </div>
          <% end %>
        </ul>
      </div>
    </nav>
  </body>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</html>